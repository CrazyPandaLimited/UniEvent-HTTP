#include "Request.h"
#include "Client.h"

namespace panda { namespace unievent { namespace http {

void Request::cancel (const std::error_code& err) {
    if (_client) _client->cancel(err);
}

void Request::respond (const ResponseSP& res) {
    assert(_sconn);
    _sconn->respond(this, res);
}

std::ostream& operator<< (std::ostream& os, const NetLoc& h) {
    os << h.host;
    os << ":";
    os << to_string(h.port);
    return os;
}

}}}
